
# Copy this file to .env and fill in your actual values

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=5000
NODE_ENV=development

# ===========================================
# FIREBASE CONFIGURATION
# ===========================================
# Get these from Firebase Console > Project Settings > Service Accounts
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-private-key-here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# Web App Configuration (from Firebase Console > Project Settings > General)
FIREBASE_WEB_API_KEY=your-web-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=your-app-id

# ===========================================
# AI SERVICES
# ===========================================
# Google Gemini AI - Get from https://makersuite.google.com/app/apikey
GEMINI_API_KEY= your-gemini-api-key-here

# ===========================================
# MAPS AND LOCATION SERVICES
# ===========================================
# Google Maps API - Get from Google Cloud Console
GOOGLE_MAPS_API_KEY=your-maps-api-key-here

# ===========================================
# BOOKING SERVICES
# ===========================================
# EMT Inventory API - Contact EMT for access
EMT_API_KEY=your-emt-api-key-here
EMT_API_URL=https://api.emt-inventory.com

# ===========================================
# PAYMENT GATEWAYS
# ===========================================
# Stripe (International payments)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# Razorpay (India payments)
RAZORPAY_KEY_ID=rzp_test_your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# PayPal (International payments)
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# ===========================================
# WEATHER SERVICES
# ===========================================
# OpenWeatherMap - Get from https://openweathermap.org/api
OPENWEATHER_API_KEY=your-openweather-api-key

# ===========================================
# COMMUNICATION SERVICES
# ===========================================
# SendGrid (Email)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Twilio (SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ===========================================
# SECURITY
# ===========================================
# JWT Secret for authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ===========================================
# CURRENCY CONVERSION (Optional)
# ===========================================
# Fixer.io for real-time currency conversion
FIXER_API_KEY=your-fixer-api-key

# ===========================================
# ANALYTICS (Optional)
# ===========================================
# Google Analytics
GA_TRACKING_ID=GA-XXXXXXXXX

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Enable/disable features for development
ENABLE_AI_GENERATION=true
ENABLE_REAL_BOOKING=false
ENABLE_PAYMENT_PROCESSING=false
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false

# ===========================================
# PRODUCTION SETTINGS
# ===========================================
# Set these to true in production
# ENABLE_AI_GENERATION=true
# ENABLE_REAL_BOOKING=true
# ENABLE_PAYMENT_PROCESSING=true
# ENABLE_EMAIL_NOTIFICATIONS=true
# ENABLE_SMS_NOTIFICATIONS=true
